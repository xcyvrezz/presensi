APP_NAME="Absensi MIFARE - SMK Negeri 10 Pandeglang"
APP_ENV=local
APP_KEY=
APP_DEBUG=true

# ==============================================================================
# Application URL Configuration
# ==============================================================================
# Set your application's base URL here. Laravel will use this for generating
# all links, assets, and API endpoints automatically.
#
# DEVELOPMENT EXAMPLES:
#   XAMPP/Local (subdirectory): APP_URL=http://localhost/absensi-mifare/public
#   XAMPP/Local (root):         APP_URL=http://localhost
#   Artisan serve:              APP_URL=http://localhost:8000
#   Custom domain (hosts):      APP_URL=http://absensi.local
#
# PRODUCTION EXAMPLES:
#   Root domain:                APP_URL=https://absensi.smkn10.sch.id
#   Subdirectory:               APP_URL=https://smkn10.sch.id/absensi
#   With www:                   APP_URL=https://www.absensi.smkn10.sch.id
#
# IMPORTANT NOTES:
#   - No trailing slash! âœ— https://example.com/
#   - Must include protocol (http:// or https://)
#   - Match your actual access URL
#   - For HTTPS in production, set APP_URL to https://
# ==============================================================================
APP_URL=http://localhost

# Asset URL (optional)
# Only set this if your assets are served from a different domain/CDN
# Leave empty to use APP_URL automatically
ASSET_URL=

APP_TIMEZONE=Asia/Jakarta

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==============================================================================
# Database Configuration
# ==============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=absensi_mifare
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
